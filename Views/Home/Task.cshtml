@{
    ViewData["Title"] = "My Tasks";
}
@model MovieCollection.Models.ApplicationResponse;

<h1>@ViewData["Title"]</h1>
<p>Fill out your tasks!</p>
<div>
    <form method="post">
        <label asp-for="Task">Task:</label>
        <input asp-for="Task" />
        <br />
        <label asp-for="DueDate">Due Date:</label>
        <input asp-for="DueDate" />
        <br />
        <label asp-for="Quadrant">Quadrant:</label>
        <input asp-for="Quadrant" />
        <br />
        <label asp-for="CategoryId">Category:</label>
        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
        <br />
        <label asp-for="Completed"></label>
        <select asp-for="Completed">
            <option value="True">Yes</option>
            <option value="False">No</option>
        </select>
        <br />
        <div asp-validation-summary="All"></div>
        <button type="submit">Submit Application</button>
    </form>
</div>
