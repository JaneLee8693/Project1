@{
    ViewData["Title"] = "Time Mamangement Matrix";
}
@* Euigun Jung: #3 *@

@model Project1.Models.ApplicationResponse

<div class="container">

    <div class="row"> Stephen Covey's Time Management Matrix </div>

    <div class="row">
        <div class="col-2"></div>
        <div class="col-5">Urgent</div>
        <div class="col-5">Not Urgent</div>
    </div>

    <div class="row">
        <div class="col-2">Important</div>
        <div class="col-5">
            Quadrant 1
            <div>
                @foreach (var i in Model)
                {
                    if (i.Quadrant == 1)
                    {
                        <div>
                            <div>@i.Task</div>
                            <div>
                                <a asp-controller="Home" asp-action="Edit" asp-route-applicationId="@i.TaskId"> Edit Task </a> <br />
                                <a asp-controller="Home" asp-action="Delete" asp-route-applicationId="@i.TaskId"> Delete Task </a>
                            </div>
                            <div>
                                <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Complete" asp-route-applicationId="@i.TaskId"> Task Completed! </a>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
        <div class="col-5">
            Quadrant 2
            <div>
                @foreach (var i in Model)
                {
                    if (i.Quadrant == 2)
                    {
                        <div>
                            <div>@i.Task</div>
                            <div>
                                <a asp-controller="Home" asp-action="Edit" asp-route-applicationId="@i.TaskId"> Edit Task </a> <br />
                                <a asp-controller="Home" asp-action="Delete" asp-route-applicationId="@i.TaskId"> Delete Task </a>
                            </div>
                            <div>
                                <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Complete" asp-route-applicationId="@i.TaskId"> Task Completed! </a>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-2">Not Important</div>
        <div class="col-5">
            Quadrant 3
            <div>
                @foreach (var i in Model)

                    if (i.Quadrant == 3)
                    {
                       <div>
                            <div>@i.Task</div>
                            <div>
                                <a asp-controller="Home" asp-action="Edit" asp-route-applicationId="@i.TaskId"> Edit Task </a> <br />
                                <a asp-controller="Home" asp-action="Delete" asp-route-applicationId="@i.TaskId"> Delete Task </a>
                            </div>
                            <div>
                                <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Complete" asp-route-applicationId="@i.TaskId"> Task Completed! </a>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
        <div class="col-5">
            Quadrant 4
            <div>
                @foreach (var i in Model)
                {
                    if (i.Quadrant == 4)
                    {
                        <div>
                            <div>@i.Task</div>
                            <div>
                                <a asp-controller="Home" asp-action="Edit" asp-route-applicationId="@i.TaskId"> Edit Task </a> <br />
                                <a asp-controller="Home" asp-action="Delete" asp-route-applicationId="@i.TaskId"> Delete Task </a>
                            </div>
                            <div>
                                <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Complete" asp-route-applicationId="@i.TaskId"> Task Completed! </a>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

</div>
